{% extends 'base.html.twig' %}

{% block title %}Timer{% endblock %}

{% block content %}
    <h1>Timer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ timer.id }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ timer.startTime ? timer.startTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndTime</th>
                <td>{{ timer.endTime ? timer.endTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_timer_index') }}">back to list</a>

    <a href="{{ path('app_timer_edit', {'id': timer.id}) }}">edit</a>

